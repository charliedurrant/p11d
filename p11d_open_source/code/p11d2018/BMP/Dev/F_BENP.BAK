Public Function FillClasses() As Boolean

  On Error GoTo FillClasses_Err
  Call xSet("FillClasses")
    With Me.CB_Category
    .Clear
    Select Case m_bentype
      Case BC_CREDITSUBS
        .AddItem S_CREDIT
        .AddItem S_SUBSCRIPTION
      Case BC_MEDICAL
        .AddItem S_EDUCATION
        .AddItem S_MEDICAL
        .AddItem S_NURSERY
      Case BC_GENERAL
        .AddItem S_ENTERTAINMENT
        .AddItem S_TRAVEL
        .AddItem S_GENERAL
      Case BC_MISC
        .AddItem S_NOTIONAL
        .AddItem S_CHAUFFEUR
        .AddItem S_PAYMENTS
        .AddItem S_SHARES
        .AddItem S_TAXPAID
      Case BC_P
        .AddItem S_P
      Case Else
        ECASE "Unknown benefit class"
    End Select
  End With


FillClasses_End:
  Call xReturn("FillClasses")
  Exit Function

FillClasses_Err:
  Call ErrorMessage(ERR_ERROR, Err, "FillClasses", "ERR_UNDEFINED", "Undefined error.")
  Resume FillClasses_End
End Function

